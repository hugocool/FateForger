{
  "$schema": "https://github.com/tuannvm/slack-mcp-client/schema/config-schema.json",
  "version": "2.0",
  "slack": {
    "botToken": "${SLACK_BOT_TOKEN}",
    "appToken": "${SLACK_APP_TOKEN}"
  },
  "llm": {
    "provider": "openai",
    "providers": {
      "openai": {
        "apiKey": "${OPENAI_API_KEY}",
        "model": "${OPENAI_MODEL}"
      }
    }
  },
  "mcpServers": {
    "calendar": {
      "url": "${SLACK_MCP_UPSTREAM_URL}",
      "transport": "sse",
      "initializeTimeoutSeconds": 30
    }
  }
}
