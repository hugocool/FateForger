[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    .mypy_cache,
    .pytest_cache,
    alembic/versions/

per-file-ignores =
    __init__.py:F401
    tests/*:S101

# Complexity
max-complexity = 10

# Import order
import-order-style = google
application-import-names = productivity_bot
